{
  "name": "lxldevhelper",
  "displayName": "LXLDevHelper",
  "publisher": "moxicat",
  "description": "Assist in the development of Lxl's plugin",
  "version": "0.0.15",
  "icon": "images/icon.png",
  "repository": "https://github.com/moxicode/LXLDevHelper",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:LXLDevHelper.showDocs",
    "onCommand:LXLDevHelper.configure",
    "onCommand:LXLDevHelper.update",
    "onCommand:lxldev.runner",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "LXLDevHelper.showDocs",
        "title": "显示LiteXLoader文档",
        "category": "LXL",
        "icon": {
          "light": "./images/docs-light.svg",
          "dark": "./images/docs-dark.svg"
        }
      },
      {
        "command": "LXLDevHelper.runner",
        "title": "启动LXL(BDS)控制台",
        "category": "LXL",
        "icon": {
          "light": "./images/run-light.svg",
          "dark": "./images/run-dark.svg"
        }
      },
      {
        "command": "LXLDevHelper.stop",
        "title": "结束LXL(BDS)控制台",
        "category": "LXL",
        "icon": {
          "light": "./images/stop-light.svg",
          "dark": "./images/stop-dark.svg"
        }
      },
      {
        "command": "LXLDevHelper.load",
        "title": "加载此文件到LXL",
        "category": "LXL",
        "icon": {
          "light": "./images/load-light.svg",
          "dark": "./images/load-dark.svg"
        }
      },
      {
        "command": "LXLDevHelper.reload",
        "title": "重载此文件到LXL",
        "category": "LXL",
        "icon": {
          "light": "./images/reload-light.svg",
          "dark": "./images/reload-dark.svg"
        }
      },
      {
        "command": "LXLDevHelper.configDir",
        "title": "配置LXL(BDS)目录",
        "category": "LXL"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == lua && config.LXLDevHelper.isrunning",
          "command": "LXLDevHelper.stop",
          "group": "navigation@2"
        },
        {
          "when": "resourceLangId == lua && !config.LXLDevHelper.isrunning",
          "command": "LXLDevHelper.runner",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == lua && config.LXLDevHelper.isrunning",
          "command": "LXLDevHelper.load",
          "group": "navigation@3"
        },
        {
          "when": "resourceLangId == lua && config.LXLDevHelper.isrunning",
          "command": "LXLDevHelper.reload",
          "group": "navigation@4"
        },
        {
          "when": "resourceLangId == lua",
          "command": "LXLDevHelper.showDocs",
          "group": "navigation@5"
        }
      ]
    },
    "configuration": {
      "title": "LXLDevHelper configuration",
      "properties": {
        "LXLDevHelper.bds-lxlDir": {
          "type": "string",
          "default": null,
          "description": "LXL的运行环境目录",
          "scope": "resource"
        },
        "LXLDevHelper.isrunning": {
          "type": "boolean",
          "default": false,
          "description": "LXL的运行状态",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/node-fetch": "^2.5.11",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.5",
    "async": "^3.2.0",
    "marked": "^2.1.3",
    "node-fetch": "^2.6.1",
    "node-stream-zip": "^1.13.6",
    "path": "^0.12.7",
    "step": "^1.0.0"
  }
}
