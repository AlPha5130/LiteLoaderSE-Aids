{
  "name": "lxldev-lua",
  "displayName": "Lxldev-Lua",
  "publisher": "moxicat",
  "description": "Assist in the development of Lxl's Lua plug-in",
  "version": "0.0.6",
  "repository": "https://github.com/moxicode/LxLdev-lua",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lxldev-lua.showDocs",
    "onCommand:lxldev-lua.configure",
    "onCommand:lxldev-lua.update",
    "onCommand:lxldev-lua.runner",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lxldev-lua.showDocs",
        "title": "显示LiteXLoader文档",
        "category": "LXL"
      },
      {
        "command": "lxldev-lua.configure",
        "title": "配置LiteXLoader项目",
        "category": "LXL"
      },
      {
        "command": "lxldev-lua.update",
        "title": "更新LiteXLoader项目",
        "category": "LXL"
      },
      {
        "command": "lxldev-lua.out",
        "title": "导出所有Lua插件文件",
        "category": "LXL",
        "icon": {
          "light": "./images/out_light.svg",
          "dark": "./images/out_dark.svg"
        }
      },
      {
        "command": "lxldev-lua.runner",
        "title": "启动LXL(BDS)控制台",
        "category": "LXL",
        "icon": {
          "light": "./images/run-light.svg",
          "dark": "./images/run-dark.svg"
        }
      },
      {
        "command": "lxldev-lua.load",
        "title": "加载/重载此文件到LXL",
        "category": "LXL",
        "icon": {
          "light": "./images/reload-light.svg",
          "dark": "./images/reload-dark.svg"
        }
      },
      {
        "command": "lxldev-lua.configDir",
        "title": "配置LXL(BDS)目录",
        "category": "LXL"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == lua && !config.LXl-Lua-runner.isrunning",
          "command": "lxldev-lua.runner",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == lua && config.LXl-Lua-runner.isrunning",
          "command": "lxldev-lua.load",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == lua",
          "command": "lxldev-lua.out",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "LXLdev-Lua configuration",
      "properties": {
        "LXl-Lua-runner.bds-lxlDir": {
          "type": "string",
          "default": null,
          "description": "LXL的运行环境目录",
          "scope": "resource"
        },
        "LXl-Lua-runner.isrunning": {
          "type": "boolean",
          "default": false,
          "description": "LXL的运行状态",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/node-fetch": "^2.5.11",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.5",
    "async": "^3.2.0",
    "marked": "^2.1.3",
    "node-fetch": "^2.6.1",
    "node-stream-zip": "^1.13.6",
    "path": "^0.12.7",
    "step": "^1.0.0"
  }
}
